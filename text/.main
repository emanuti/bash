_ansi_color() {
    local color="$1"
    local style="${2:-bold}"
    
    case $color in
        black)   color_code=30;;
        red)     color_code=31;;
        green)   color_code=32;;
        yellow)  color_code=33;;
        blue)    color_code=34;;
        magenta) color_code=35;;
        cyan)    color_code=36;;
        white)   color_code=37;;
        *)       color_code=39;; # Default to white
    esac
    
    case $style in
        bold)    style_code=1;;
        faint)   style_code=2;;
        italic)  style_code=3;;
        underline) style_code=4;;
        blink)   style_code=5;;
        reverse) style_code=7;;
        hidden)  style_code=8;;
        *)       style_code=0;; # Default to normal
    esac
    
    echo -n "\e[${style_code};${color_code}m"
}

_printBlue() {
    _ansi_color blue
    echo -e "$1\e[0m"
}

_printGreen() {
	_ansi_color green
    echo -e "$1\e[0m"
}

_printRed() {
	_ansi_color red
    echo -e "$1\e[0m"
}

_printYellow() {
	_ansi_color yellow 
    echo -e "$1\e[0m"
}

_printNested() {
	echo -e "\t$1"
}